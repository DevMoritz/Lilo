    "docker:stop": "docker-compose down"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "typescript": "~4.8.4"
  },
  "dependencies": {
    "@types/node": "^18.11.5",
    "discord-webhook-node": "^1.1.8",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "minecraft-server-util": "^5.3.1",
    "redis": "^4.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  }
}
