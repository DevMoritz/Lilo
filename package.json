{
  "name": "core",
  "description": "Backend Core for everything VirtualDrive",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "lint": "eslint --ext js,ts,tsx --fix .",
    "docker:start": "docker-compose up --build",
